{
	"name": "@remix-galaxy/remix-hono-vite",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "run-s build:*",
		"build:remix": "remix vite:build",
		"build:server": "tsx server/builder.ts",
		"dev": "vite",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "NODE_ENV=production SESSION_SECRET=s3cr3t node ./build/server/index.js",
		"docker": "run-s docker:*",
		"docker:build": "cd ../.. && docker build -f playgrounds/remix-hono-vite/Dockerfile -t remix-hono-vite .",
		"docker:run": "cd ../.. && docker run --rm -d -p 8080:8080 --env-file playgrounds/remix-hono-vite/.env remix-hono-vite",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@hono/node-server": "^1.7.0",
		"@remix-run/node": "^2.6.0",
		"@remix-run/react": "^2.6.0",
		"hono": "^4.0.0",
		"isbot": "^4.4.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-hono": "^0.0.15"
	},
	"devDependencies": {
		"@hono/vite-dev-server": "^0.3.5",
		"@remix-galaxy/eslint-config": "*",
		"@remix-galaxy/typescript-config": "*",
		"@remix-run/dev": "^2.6.0",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"autoprefixer": "^10.4.17",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^7.3.0",
		"esbuild": "^0.19.11",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.33",
		"tailwindcss": "^3.4.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"vite": "^5.1.1",
		"vite-tsconfig-paths": "^4.3.1"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
